<h1>New Post</h1>

<form class="" action="<%= posts_url %>" method="POST">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <label>Title
    <input type="text" name="post[title]" value="">
  </label>

  <label>URL
    <input type="text" name="post[url]" value="">
  </label>

  <label>Post
    <input type="text" name="post[content]" value="">
  </label>
  <br>
  <label>Related Subs
    <input type="hidden" name="post[sub_ids][]" value="">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <% @subs.each do |s| %>
      <label><%= s.title %>
        <input type="checkbox" name="post[sub_ids][]" value="<%= s.id %>" <%= "checked" if @post.sub_ids.include?(s.id)%> />

      </label>
    <% end %>

  </label>

  <input type="submit" name="" value="Create Post">
</form>
